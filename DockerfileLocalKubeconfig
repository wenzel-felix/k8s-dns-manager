# syntax=docker/dockerfile:1

FROM golang:1.20.4 AS build

# Set destination for COPY
WORKDIR /app

# Download Go modules
COPY go.mod go.sum kubeconfig ./
RUN go mod download

# Copy the source code. Note the slash at the end, as explained in
# https://docs.docker.com/engine/reference/builder/#copy
COPY *.go ./

# Build
RUN CGO_ENABLED=0 GOOS=linux go build -o /dns-loadbalancer

# Run
CMD ["/dns-loadbalancer"]

FROM scratch
# Copy our static executable.
COPY --from=build /dns-loadbalancer /dns-loadbalancer
COPY --from=build /app/kubeconfig /kubeconfig
COPY --from=build /etc/ssl/certs/ca-certificates.crt /etc/ssl/certs/
# Run the hello binary.
ENTRYPOINT ["/dns-loadbalancer"]